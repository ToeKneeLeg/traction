<h1><%= @project.name %></h1>

<p>
  Description: <%= @project.description %>
</p>

<div class="tasks">
  <h3>Tasks:</h3>
  <% @tasks.each do |task| %>
    <% if task.member_id != nil %>
      <div>
        <h4><%= task.description %> <small>(Required skills: <%= task.required_skill %>)</small> Assigned to: <%= "#{task.member.first_name} #{task.member.last_name}" %></h4>
      </div>
    <% end %>
  <% end %>
</div>
<br>

<div class="unassigned_tasks">
  <h3>Unassigned Tasks:</h3>
  <% @unassigned.each do |task| %>
    <div>
      <h4><%= task.description %> <small>(Required skills: <%= task.required_skill %>)</small></h4>
    </div>
  <% end %>
</div>

<form method="post" action="/dashboard">
  <div>
    <input type="submit" value="Add Task">
  </div>
  <div>
    <input type="hidden" value="@project.id">
  </div>
</form>

<form method="post" action="/dashboard">
  <div>
    <input type="submit" value="Add Member to Project">
  </div>
  <div>
    <input type="hidden" value="@project.id">
  </div>
</form>
