
<h1><%= @project.name %></h1>
<h2><%= @project.description %></h2>
<p><a href="/dashboard">Back to projects.</a></p>
<h1><%= @project.name %></h1>

<p>
  Description: <%= @project.try(:description) %>
</p>

<div class="tasks">
  <h3>Tasks:</h3>  
    <form method="post" action="/dashboard/project/<%=@project.id%>/update"> 
      <% @tasks.each do |task| %>
        <% if task.member_id != nil && task.completed == false %>
          <div>
            <input type="radio" name="task_completed" value="<%= task.id%>">
            <strong><%= task.description %></strong> <small>Assigned to: <%= "#{task.member.try(:first_name)} #{task.member.try(:last_name)}" %></small><br><br>
          </div>
        <% end %>
      <% end %>
      <div>
        <input type="submit" value="Update Completed Task">
      </div>
       <div>
        <input type="hidden" name ="projectid" value="<%= @project.id %>">
      </div>
    </form>    
</div>
<br>

<div class="unassigned_tasks">
  <h3>Unassigned Tasks:</h3>
  <% @unassigned.each do |task| %>
    <div>
      <h4><%= task.try(:description) %> <small>(Required skills: <%= task.skill.try(:name) %>)</small></h4>
    </div>
  <% end %>
</div>

<form method="post" action="/dashboard/project/<%=@project.id%>">
  <div>
    <lable>Task Description:</lable>
    <input type="text" name="description">
  </div>
  <div>
    <label>Required Skill:</label>
    <select name="drop_down_required_skill">
      <option selected="selected" value="<%nil%>">Select a required skill</option>
      <% @skills.each do |skill| %>
        <option value="<%=skill.id%>"><%=skill.name%></option>
      <% end %>
        <option value="<%nil%>">Not listed? Create one below</option>
    </select>
  </div>
  <div>
    <label>Create a new required skill that's not on the list</label>
    <input type="text" name="required_skill">
  </div>
  <div>
    <input type="submit" value="Add Task">
  </div>
  <div>
    <input type="hidden" name ="projectid" value="<%= @project.id %>">
  </div>
</form>

<div>
  <a href="/dashboard">Back to other projects</a>
</div>
