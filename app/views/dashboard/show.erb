<h1><%= @project.try(:name) %></h1>

<p>
  Description: <%= @project.try(:description) %>
</p>

<div class="tasks">
  <h3>Tasks:</h3>
  <% @tasks.each do |task| %>
    <% if task.member_id != nil %>
      <div>
        <form method="post" action="/update_task">
          <input type="checkbox" name="<%= task.completed %>" value="true">
              <strong><%= task.description %></strong> <small>(Required skills: <%= task.required_skill %>)</small> Assigned to: <%= "#{task.member.try(:first_name)} #{task.member.try(:last_name)}" %>
        </form>
      </div>
    <% end %>
  <% end %>
</div>
<br>

<div class="unassigned_tasks">
  <h3>Unassigned Tasks:</h3>
  <% @unassigned.each do |task| %>
    <div>
      <h4><%= task.try(:description) %> <small>(Required skills: <%= task.try(:required_skill) %>)</small></h4>
    </div>
  <% end %>
</div>

<form method="post" action="/add_task">
  <div>
    <lable>Task Description:</lable>
    <input type="text" name="description">
  </div>
   <div>
    <label>Required Skill:</label>
    <input type="text" name="required_skill">
  </div>
  <div>
    <input type="submit" value="Add Task">
  </div>
  <div>
    <input type="hidden" name ="projectid" value="<%= @project.id %>">
  </div>
</form>

<form method="post" action="/dashboard">
  <div>
    <input type="submit" value="Add Member to Project">
  </div>
  <div>
    <input type="hidden" value="@project.id">
  </div>
</form>
