
<div class="row projects off-white">
  <div class="col s12">
		<div class="row">
	    <div class="col s6 add-project">
		    <ul class="collapsible" data-collapsible="accordion">
	        <li>
	          <div class="collapsible-header"><i class="fa fa-fire"></i>Add a Project</div>
	          <div class="collapsible-body">
	            <p>
	              <div class="container">
		              <form action="/dashboard-project" method="post">
				            <div class="row">
									    <div class="col s4">
												<input type="text" name="name" placeholder="Name">
											</div>
											<div class="col s8">
											  <input type="text" name="description" placeholder="Description">
											</div>
										  <button class="btn waves-effect waves-light" type="submit" name="action">Submit
											  <i class="material-icons right">send</i>
											</button>
										</div>
									</form>
								</div>
						  </p>
						</div>
	        </li>
	      </ul>
	    </div>
	    <div class="col s6 add-project">
		    <ul class="collapsible" data-collapsible="accordion">
	        <li>
	          <div class="collapsible-header"><i class="fa fa-group"></i>Add a Member</div>
	          <div class="collapsible-body">
	            <p>
	              <div class="container">
		              <form action="/dashboard-member" method="post">
				            <div class="row">
									    <div class="col s4">
												<input type="text" name="first_name" placeholder="First Name">
											</div>
											<div class="col s4">
												<input type="text" name="last_name" placeholder="Last Name">
											</div>
											<div class="col s4">
											  <input type="email" name="email" placeholder="Email">
											</div>
										  <button class="btn waves-effect waves-light" type="submit" name="action">Submit
											  <i class="material-icons right">send</i>
											</button>
										</div>
									</form>
								</div>
						  </p>
						</div>
	        </li>
	      </ul>
	    </div>
    </div>
    <h3 class="project-title">Current Projects</h3>
		<% @projects.each do |project| %>
			<div class="col s6">
				  <div class="card project-card">
						<div class="card-content white-text">
							  <span class="card-title activator black-text">
							    <a href="/dashboard/project/<%= project.id %>"><%= project.name %></a>
							  <i class="material-icons right">more_vert</i></span>
						</div>
						<div class="card-reveal">
							<span class="card-title grey-text text-darken-4"><i class="material-icons right">close</i></span>
      				<p class="project-description"><%= project.description %></p>
    				</div>
					</div>
				</a>
			</div>
		<% end %>
	</div>
</div>



